{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "src/types/global/env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "__tests__"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": ".",
    "lib": [
      "ESNext",
      "DOM",
      "WebWorker"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "useUnknownInCatchVariables": false
  }
}