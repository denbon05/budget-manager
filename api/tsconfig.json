{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    /* Linting */
    "strict": true,
    "types": [
      "@vercel/node",
      "bun-types"
    ]
  }
}